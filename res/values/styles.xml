<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:indeterminateDrawable">@anim/loading</item>
		<item name="android:layout_width">21dip</item> 
		<item name="android:layout_height">21dip</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>
	    <style name="Theme.NoTitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item> 
    </style>
      <style name="widget_listview">
        <item name="android:layout_width">fill_parent</item>
   		<item name="android:layout_height">fill_parent</item>
       	<item name="android:layout_weight">1</item>      	
       	<item name="android:fadingEdge">none</item>
       	<item name="android:scrollingCache">false</item>
       	<item name="android:listSelector">@drawable/listview_item_selector</item>
       	<item name="android:divider">#00000000</item>
       	<item name="android:dividerHeight">7dip</item>
    </style>

    <style name="frame_button">
        <item name="android:layout_width">fill_parent</item>
   		<item name="android:layout_height">fill_parent</item>
       	<item name="android:layout_weight">1</item>
       	<item name="android:textColor">@color/white</item>
    </style>
</resources>