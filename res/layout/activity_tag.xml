<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@color/white">
    <FrameLayout 
		android:layout_width="fill_parent" 
   		android:layout_height="40.0dip" 
   		android:orientation="horizontal"
   		android:gravity="center_vertical" android:background="@color/gray">
       	<TextView android:textColor="@color/white" android:textSize="20sp"  android:layout_width="fill_parent" android:layout_height="fill_parent"    android:gravity="center" android:text="@string/title_tag_activity"></TextView>
	     <ProgressBar 
	            android:id="@+id/headbar_progressBar_tag"
				style="@style/loading_small"
				android:visibility="gone"
				android:layout_gravity="right" android:layout_marginTop="10dip" android:layout_marginRight="10dip"/>
    </FrameLayout>
    <ListView android:id="@+id/tag_listview"  android:layout_width="fill_parent" 
    android:layout_height="fill_parent"></ListView>
</LinearLayout>